{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/preload/*.d.ts",
    "../repertoire.ui/src/*.tsx",
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "strict": false,
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ],
      "@ui/*": [
        "../repertoire.ui/src/*"
      ]
    }
  }
}
